<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MasterDetailDemo"
             x:Class="MasterDetailDemo.MainPage">
    <MasterDetailPage.Master>        
        <ContentPage Title="Back" Padding="0,60,0,0" BackgroundColor="#01446b">
            <ContentPage.Content>
                <local:ZCNavigationContentView x:Name="MainOne"></local:ZCNavigationContentView>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <ContentPage Padding="20">
            <ContentPage.Content>
                <StackLayout Margin="5,30,5,5">
                    <Label Text="Detail Page"></Label>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Detail>

</MasterDetailPage>