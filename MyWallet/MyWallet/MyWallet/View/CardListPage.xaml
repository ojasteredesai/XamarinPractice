<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWallet.View.CardListPage">

    <ScrollView  Orientation = "Vertical" VerticalOptions="StartAndExpand">
        <StackLayout >
            <Label Text="{Binding CardHolderName}" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding CardNo}" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding CardServiceProvider}" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding CardType}" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding IsActive}" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding IsPremium}" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding CardSpendLimit}" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ScrollView>
    <!--<Frame OutlineColor="Maroon" Padding="20"  VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Welcome to Card List Page" FontSize="Large"/>
    </Frame>-->
</ContentPage>