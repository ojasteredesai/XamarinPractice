<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinLearingApp.ButtonLambdasPageXaml">
    <StackLayout>
        <Label Text="{Binding resultNumber}" HorizontalOptions="CenterAndExpand" FontSize="Large" BackgroundColor="Lime"></Label>
        <Label Text="{Binding message1}" HorizontalOptions="CenterAndExpand" FontSize="Large" BackgroundColor="Blue"></Label>
        <Label Text="{Binding message2}" HorizontalOptions="CenterAndExpand" FontSize="Large" BackgroundColor="Navy"></Label>
        <Label Text="{Binding message3}" HorizontalOptions="CenterAndExpand" FontSize="Large" BackgroundColor="Lime"></Label>
        <Label Text="{Binding message4}" HorizontalOptions="CenterAndExpand" FontSize="Large" BackgroundColor="Yellow"></Label>
        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
            <Button Text="Double" Clicked="OnButtonClick"></Button>
            <Button Text="Half" Clicked="OnButtonClick"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>